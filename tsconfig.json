{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "./",
    "target": "es6",
    "lib": [
      "ES2021.String"
    ],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false
  },
  "include" : [
    "**/*.ts"   /* Include every ts file in source folder */
  ],
  "exclude" : [
    "node_modules",  /* exclude everything in  node_modules */
    "build"
  ]
}
